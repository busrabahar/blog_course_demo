<div id="post_show_content" class="skinny_wrapper wrapper_padding">
            <header>
                <p class="date"><%= @post.created_at.strftime ('%A, %B %d') %> </p>
                <h1> <%= @post.title %>
                <hr>
            </header>
            <div id="content">
            <%= simple_format @post.content %> <!--simple_format ile yazılan yazıya format verildi (paragraf seklinde)-->
            </div>
</div>

 <div id="share_box">
                <p>Yapilacaklar Listesi'ni Paylas!</p>
                

                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href=""><i class="fa fa-facebook"></i></a>
                <a href=""><i class="fa fa-google-plus"></i></a>
 </div>

<%= render 'disqus' %>
<br>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete,  data: { confirm: "Are you sure you want to delete this post?"} %>